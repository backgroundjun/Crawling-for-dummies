{
  "manifest_version": 3,
  "name": "Crawling-for-dummies",
  "description": "Crawling-for-dummies is a chrome-addons that allows user-friendly approach to web crawling.",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "cookies",
    "declarativeContent",
    "storage"
 ],
 "host_permissions": [
  "http://*/*",
  "https://*/*"
],

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "css": ["index.css"],
    "js": ["index.js"],
    "run_at": "document_end"
  }]
}